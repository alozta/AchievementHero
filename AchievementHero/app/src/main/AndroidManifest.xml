<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alozta.achievementhero"
    >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVesion="23"
        />

    <application
        android:allowBackup="true"
        android:icon="@drawable/medal"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"> <!-- old one: "@style/AppTheme"-->

        <!-- activity name here -->
        <activity
            android:name="com.alozta.achievementhero.WelcomeActivity"
            android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
